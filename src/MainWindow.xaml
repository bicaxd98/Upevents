<Window x:Class="Gopro360App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UP Events 360" Height="700" Width="420" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#111111">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- Header with logo -->
        <Border Grid.Row="0" Background="#0f0f0f" CornerRadius="8" Padding="12">
            <DockPanel>
                <Image Source="pack://siteoforigin:,,,/packaging/upevents.ico" Width="48" Height="48" DockPanel.Dock="Left" Margin="6"/>
                <TextBlock Text="UP Events 360" Foreground="White" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
            </DockPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Margin="0,18,0,0" VerticalAlignment="Top" Spacing="12">
            <Button Name="BtnStart" Content="Start Recording" Height="62" FontSize="16" Click="BtnStart_Click" Background="#C4973A" Foreground="White"/>
            <Button Name="BtnStop" Content="Stop Recording" Height="62" FontSize="16" Click="BtnStop_Click" Background="#A67B2A" Foreground="White" IsEnabled="False"/>
            <Button Name="BtnDownload" Content="Download Latest Video" Height="52" FontSize="14" Click="BtnDownload_Click" Background="#2B2B2B" Foreground="White"/>
            <Button Name="BtnBuild" Content="Build Project & Generate Installer" Height="52" FontSize="14" Click="BtnBuild_Click" Background="#222222" Foreground="White"/>
            <ProgressBar Name="MainProgress" Height="14" Margin="0,8,0,0" Minimum="0" Maximum="100" Value="0"/>
        </StackPanel>

        <!-- Log box -->
        <Border Grid.Row="2" Background="#0b0b0b" CornerRadius="8" Padding="10" Margin="0,12,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Name="LogBox" Foreground="#e6e6e6" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
